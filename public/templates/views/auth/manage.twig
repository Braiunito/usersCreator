{% extends "base.html" %}

{% block content %}
<h1>Welcome to manage section {{name}}!</h1>
<div class="usersTable">
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">NAME</th>
                <th scope="col">LAST NAME</th>
                <th scope="col">EMAIL</th>
                <th scope="col">REGISTRATION</th>
                <th scope="col">OPTION</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
            <tr>
                    <td scope="row">{{ user.id }}</td>
                    <td>{{ user.firstname }}</td>
                    <td>{{ user.lastname }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.reg_date }}</td>
                    <td>
                        <form action="/delete/user" method="POST">
                            <button type="submit" value="{{ user.id }}" name="delete" class="delete btn btn-danger">
                                <i class="fas fa-times-circle"></i>
                            </button>
                        </form>
                        <form action="/home/manage/edit?{{ user.id }}" method="GET">
                            <button type="submit" value="{{ user.id }}" name="id" class="edit btn btn-success">
                                <i class="far fa-edit"></i>
                            </button>
                        </form>
                    </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}