{% extends "base.html" %}

{% block content %}
<h1>Welcome to edit section {{name}}!</h1>
<div class="usersTable">
    <form action="/home/manage/edit?{{ user.id }}" method="GET">
        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">NAME</th>
                    <th scope="col">LAST NAME</th>
                    <th scope="col">EMAIL</th>
                    <th scope="col">REGISTRATION</th>
                    <th scope="col">OPTION</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td scope="row">{{ edit.id }}</td>
                    <td> <input type="text" value="{{ edit.firstname }}"></td>
                    <td> <input type="text" value="{{ edit.lastname }}"></td>
                    <td> <input type="text" value="{{ edit.email }}"></td>
                    <td>{{ edit.reg_date }}</td>
                    <td>
                        <button type="submit" value="{{ user.id }}" name="id" class="edit btn btn-success">
                            <i class="far fa-save"></i>
                        </button>
                    </td>
                </tr>
            </tbody>
        </table>
    </form>
</div>
{% endblock %}